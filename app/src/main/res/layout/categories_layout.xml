<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/customboarder"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llAllSchedule"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ibAllSchedule"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="25dp"
            android:adjustViewBounds="true"
            android:background="#ffffff"
            android:padding="0dp"
            android:src="@drawable/img_notes" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="All Schedule"
                android:textColor="@color/color_grey_bold"
                android:textSize="7pt" />

            <TextView
                android:id="@+id/tvAllScheduleSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="57 tasks"
                android:textColor="@color/color_grey_text" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPerErr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:adjustViewBounds="false"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ibPersonalErr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="25dp"
            android:src="@drawable/img_personal_err" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/personal_errands"
                android:textColor="@color/color_grey_bold"
                android:textSize="7pt" />

            <TextView
                android:id="@+id/tvPersonalErrSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 tasks"
                android:textColor="@color/color_grey_text" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>