<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F6FB"
    tools:context="tasksapp.tieto.com.tasksmanager.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <View
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_weight="9" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="#F5F6FB"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:id="@+id/ibSettings"
            android:src="@drawable/ib_more" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_height="150dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_violet"
            android:textSize="18pt"
            android:text="@string/hello_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/color_violet"
            android:textSize="18pt"
            android:textStyle="bold"
            android:id="@+id/tvUserName"
            android:text="Jasson"/>

        <TextView
            android:id="@+id/tvMainDate"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="Sunday, 12nd March"
            android:textColor="@color/color_grey_text"
            android:textSize="6pt" />
    </LinearLayout>

    <include layout="@layout/tasks_layout"/>
    <include layout="@layout/categories_layout"/>
    <include layout="@layout/categories_2_layout"/>
    <include layout="@layout/categories_3_layout"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_menu_edit" />
    <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:id="@+id/fab"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="16dp"-->
        <!--android:clickable="true"-->
        <!--android:src="@drawable/ic_note_add_black_24dp"-->
